<%- include('../partials/header', { title, busca:'', usuario:null, admin }) %>
<main class="container my-5">
  <h1><%= title %></h1>
  <a href="/admin/categories" class="btn btn-secondary mb-4">Voltar</a>
  <div class="row row-cols-1 row-cols-md-2 g-4">
    <% if (events.length === 0) { %>
      <p class="text-muted">Nenhum evento cadastrado nesta categoria.</p>
    <% } else { %>
      <% events.forEach(ev => { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= ev.titulo %></h5>
              <p class="card-text">
                <small class="text-muted">
                  <%= new Date(ev.dataHora).toLocaleString('pt-BR', {
                    day:'2-digit', month:'2-digit', year:'numeric',
                    hour:'2-digit', minute:'2-digit'
                  }) %>
                  â€¢ <%= ev.local || 'Online' %>
                </small>
              </p>
              <a href="/events/<%= ev.id %>" class="btn btn-outline-primary mt-auto">
                Ver Evento
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>
</main>
<%- include('../partials/footer') %>
