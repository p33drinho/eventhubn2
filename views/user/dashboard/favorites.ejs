<%- include('../../partials/header', { title: title, busca: busca, usuario: usuario }) %>

<main class="container my-5">
  <h1 class="mb-4">Meus Favoritos</h1>

  <% if (!favorites || favorites.length === 0) { %>
    <div class="alert alert-info">Você não possui eventos favoritados.</div>
  <% } else { %>
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% favorites.forEach(fav => { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <% if (fav.imagem) { %>
              <img
                src="<%= fav.imagem %>"
                class="card-img-top"
                alt="<%= fav.titulo %>"
                style="object-fit: cover; height:200px;"
              >
            <% } %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= fav.titulo %></h5>
              <p class="card-text text-muted mb-3">
                <%= new Date(fav.data_hora).toLocaleDateString('pt-BR', {
                     day:   '2-digit',
                     month: '2-digit',
                     year:  'numeric',
                     hour:  '2-digit',
                     minute:'2-digit'
                   }) %>
              </p>
              <div class="mt-auto text-end">
                <a
                  href="/events/<%= fav.id %>"
                  class="btn btn-primary btn-sm"
                >
                  Ver Evento
                </a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</main>

<%- include('../../partials/footer') %>
